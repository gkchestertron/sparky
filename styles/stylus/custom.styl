@import functions

body
  .alert-danger
    background-color rgba(242,222,222,0.7)
    border 2px solid #ebaaaa

  .btn
    width 100%
    border 2px solid white
    background-color rgba(0,0,0,0.1)
    box-shadow 1px 2px 3px rgba(0,0,0,0.2)
    color white
    margin-bottom 15px

  .btn:hover
    width 100%
    background-color white
    border 2px solid #ddd
    color black
    cursor pointer

  .form-control
    color white
    background-color rgba(0,0,0,0.2)
    border 2px solid white
    box-shadow 1px 2px 3px rgba(0,0,0,0.2)
    +placeholder()
      color #ddd

  .form-control:hover
    color white
    background-color rgba(0,0,0,0)

  .form-control:focus
    color white
    background-color rgba(0,0,0,0)
    border 2px solid #ddd
    +placeholder()
      color #fff
